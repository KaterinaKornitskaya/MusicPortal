@model MusicPortal.Models.Genre

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалення жанру</h2>

<section>
    <div>
       
        <dl>
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>

        </dl>

        <hr />
        <div >
           
            <h3>Ви дійсно бажаєте видалити цей жанр?</h3>
            <div >
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Видалити" class="btn btn-danger" /> |
                    
                </form>
            </div>
        </div>
        <a asp-action="AllGenres">Назад к списку</a>
      
    </div>
</section>