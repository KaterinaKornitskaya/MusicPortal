@model MusicPortal.Models.Genre

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагування жанру</h2>

<section>
    <div>

        <dl>
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>

        </dl>

        <hr />
        <div>

            <h3>Ви дійсно бажаєте редагувати цей жанр?</h3>
            <div>
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="submit" value="Редагувати" class="btn btn-danger" /> |

                </form>
            </div>
        </div>
        <a asp-action="AllGenres">Назад к списку</a>

    </div>
</section>