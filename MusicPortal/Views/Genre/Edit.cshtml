@model MusicPortal.Models.Genre

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form asp-action="Edit" asp-controller="Genre">
        <div>
            <p>Видалення жанру</p>
        </div>
        <table class="songTable">
            <tr>
                <td>
                    <p>@Html.DisplayNameFor(e => e.Title)</p>
                </td>
                <td>
                    <p>@Html.DisplayFor(e => e.Title)</p>
                </td>
            </tr>
        </table>

        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Редагувати" class="btn btn-danger" />
        </div>
        <br/>
        <div>
            <a asp-action="AllGenres" class="linkBack">Назад до списку жанрів</a>
        </div>
    </form>
</div>
